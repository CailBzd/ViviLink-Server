{
  "name": "vivilink-server",
  "version": "1.0.0",
  "description": "Backend server for ViviLink",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/src/framework_drivers/web/ExpressServer.js",
    "dev": "ts-node-dev --respawn --transpile-only src/framework_drivers/web/ExpressServer.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest --coverage",
    "swagger": "swagger-jsdoc -d swaggerDef.js -o ./swagger.json",
    "prepare": "husky install",
    "prebuild": "rimraf dist"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
